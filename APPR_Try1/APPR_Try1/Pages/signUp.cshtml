@page
@model APPR_Try1.Pages.signUpModel
@{
    ViewData["Title"] = "Sign In";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="SignInUser.Email">Email</label>
        <input asp-for="SignInUser.Email" class="form-control" placeholder="Email">
        <span asp-validation-for="SignInUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SignInUser.Password">Password</label>
        <input asp-for="SignInUser.Password" class="form-control" type="password" placeholder="Password">
        <span asp-validation-for="SignInUser.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>

    <div class="mt-3">
        <p>Not registered yet? <a asp-page="/RegisterPage">Create an account</a></p>
    </div>
</form>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}