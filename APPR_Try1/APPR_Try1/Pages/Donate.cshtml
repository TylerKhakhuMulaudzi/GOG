@page
@model DonateModel
@{
    ViewData["Title"] = "Make a Donation";
}

<h2>Make a Donation</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Donation.FullName">Full Name:</label>
        <input asp-for="Donation.FullName" class="form-control" />
        <span asp-validation-for="Donation.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Donation.Email">Email:</label>
        <input asp-for="Donation.Email" class="form-control" />
        <span asp-validation-for="Donation.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Donation.Amount">Donation Amount:</label>
        <input asp-for="Donation.Amount" class="form-control" />
        <span asp-validation-for="Donation.Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Donation.DonationType">Donation Type:</label>
        <select asp-for="Donation.DonationType" class="form-control">
            <option value="">Select a donation type...</option>
            <option value="OneTime">One-time Donation</option>
            <option value="Monthly">Monthly Donation</option>
            <option value="Annual">Annual Donation</option>
        </select>
        <span asp-validation-for="Donation.DonationType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Donation.Message">Message (Optional):</label>
        <textarea asp-for="Donation.Message" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-check">
        <input asp-for="Donation.IsAnonymous" class="form-check-input" type="checkbox" />
        <label asp-for="Donation.IsAnonymous" class="form-check-label">Make this donation anonymous</label>
    </div>

    <div class="form-group">
        <label asp-for="Donation.PaymentMethod">Payment Method:</label>
        <select asp-for="Donation.PaymentMethod" class="form-control">
            <option value="">Select a payment method...</option>
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="BankTransfer">Bank Transfer</option>
        </select>
        <span asp-validation-for="Donation.PaymentMethod" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Donate Now</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}